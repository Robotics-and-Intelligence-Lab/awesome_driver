<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="pi" value="3.14159265359"/>    
    <xacro:include filename="$(find awesome_driver)/urdf/inertial.xacro"/>    
    
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://awesome_driver/meshes/main_frame.obj"/>
            </geometry>
        </visual>

        <xacro:inertial_base/>
    </link>

    <gazebo reference="base_link">
        <pose>0 0 0.3 0 0 0</pose>
    </gazebo>

    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster"/>
        <origin xyz="0.28 0 0" rpy="0 0 0"/>
    </joint>        
    
    <link name="caster">
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>

        <xacro:inertial_caster/>
    </link>   
    
    <gazebo reference="caster">
        <mu>0.0</mu>
        <mu2>0.0</mu2>
        <slip1>1.0</slip1>
        <slip2>1.0</slip2>
        <material>Gazebo/RedBright</material>
    </gazebo>

    <xacro:macro name="rear_system" params="prefix y_offset yaw">
        <link name="${prefix}_motor">            
            <visual>
                <geometry>
                    <mesh filename="package://awesome_driver/meshes/rear_actuator.stl"/>
                </geometry>
                <material name="gray">
                    <color rgba="0.8 0.8 0.8 1"/>
                </material>
            </visual>

            <xacro:inertial_motor/>
        </link>

        <link name="${prefix}_wheel">   
            <visual>
                <geometry>
                    <mesh filename="package://awesome_driver/meshes/left_rear_wheel.stl"/>
                </geometry>
                <material name="black">
                    <color rgba="0.2 0.2 0.2 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.03448" length="0.0265"/>
                </geometry>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>            
            </collision>

            <xacro:inertial_wheel/>
        </link>

        <joint name="${prefix}_motor_mnt" type="fixed">
            <parent link="base_link"/>
            <child link="${prefix}_motor"/>
            <origin xyz="0 ${y_offset} 0.0195" rpy="0 0 ${yaw}"/>
        </joint>
        
        <joint name="${prefix}_motor_wheel" type="continuous">
            <parent link="${prefix}_motor"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0 1 0"/>
            <origin xyz="0 0.0264 -0.007" rpy="0 0 0"/>             
        </joint>

        <gazebo reference="${prefix}_motor">
            <material>Gazebo/Gold</material>
        </gazebo>

        <gazebo reference="${prefix}_wheel">
            <mu>5</mu>
            <mu2>5</mu2>
            <fdir1>1 0 0</fdir1>
            <dampingFactor>0.005</dampingFactor>
            <minDepth>0</minDepth>
            <maxVel>0.1</maxVel>
            <material>Gazebo/Grey</material>
        </gazebo>    
    </xacro:macro>

    <xacro:rear_system prefix="left" y_offset="0.0556" yaw="0"/>
    <xacro:rear_system prefix="right" y_offset="-0.0556" yaw="${pi}"/>
</robot>