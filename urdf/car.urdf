<?xml version="1.0"?>
<robot name="car">
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://awesome_driver/meshes/main_frame.stl"/>
            </geometry>
        </visual>
    </link>

    <link name="left_motor">
        <visual>
            <geometry>
                <mesh filename="package://awesome_driver/meshes/rear_actuator.stl"/>
            </geometry>
        </visual>
    </link>

    <joint name="left_motor_mnt" type="fixed">
        <parent link="base_link"/>
        <child link="left_motor"/>
        <origin xyz="0 0.0556 0.0195" rpy="0 0 0"/>        
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <mesh filename="package://awesome_driver/meshes/left_rear_wheel.stl"/>
            </geometry>
        </visual>
    </link>

    <joint name="left_motor_wheel" type="continuous">
        <parent link="left_motor"/>
        <child link="left_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0.0264 -0.007" rpy="0 0 0"/>            
    </joint>    
</robot>